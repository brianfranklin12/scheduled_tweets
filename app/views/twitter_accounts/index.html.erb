<div class="d-flex align-items-center justify-content-between">
<h1>Twitter Accounts</h1>

<%= button_to "Connect a Twitter Account", "/auth/twitter", class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |t| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag t.image, class: "rounded-circle" %>
      <%= link_to "@#{t.username}", "https://twitter.com/#{t.username}", target: :_blank %>
    </div>
    <%= button_to "Disconnect", twitter_account_path(t), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>